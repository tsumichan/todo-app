- if @task.errors.any?
  div
    ul
      - @task.errors.full_messages.each do |message|
        li = message

= form_for @task do |f|
  div
    = f.label :title, t('views.task.label.title')
    = f.text_field :title
  div
    = f.label :description, t('views.task.label.description')
    = f.text_area :description
  div
    = f.label :due_at, t('views.task.label.due_at')
    = f.text_field :due_at
  div
    = f.label :status, t('views.task.label.status')
    = f.select :status, @statuses
  div
    = f.label :priority, t('views.task.label.priority')
    = f.select :priority, @priorities
  div
    = f.submit t('views.task.button.submit')
